filetype on
syntax on
set belloff=all
"set nocompatible

filetype plugin indent on
set encoding=utf-8

" for indentation
set tabstop=4
set shiftwidth=4
set softtabstop=4
set expandtab

" for line numbers
"set number
"set relativenumber

" for folding
set foldmethod=indent
set foldlevel=0
set foldnestmax=1
set termguicolors

